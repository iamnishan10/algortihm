void display_package()
{
	int i,j,package[3][4];	
	package [0][0]= 1499;
	package [0][1]=4199;
	package [0][2]=7499; 
	package [0][3]=13999;	
	package [1][0]=1799;
	package [1][1]=4999;
	package [1][2]=9299;
	package [1][3]=17999;		
	package [2][0]=2399;
	package [2][1]=6599;
	package [2][2]=12199;
	package [2][3]=23999;
            
	for (i=0;i<3;i++)
		{
			printf("|* Home Zoom %d0x:",i+2);
			for(j=0;j<4;j++)
			{
				printf("\t\t%d",package[i][j]);
			}
					printf("\t*|\n");
			}
		
}
